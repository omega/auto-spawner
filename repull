#!/bin/sh
ROOT=`dirname $0`
BASE="${ROOT}/projects/"
PROJECTS=`ls ${BASE}`
OLD=`pwd`
for P in $PROJECTS; do
    echo $P
    cd "${BASE}${P}"
    gp=`git pull`
    echo $gp
    echo $gp | grep -q 'lib/'
    if [ "$?" != "0" ]; then
        echo "No match?"
    else
        echo "Match, restart"
        ./reloader
    fi
done
cd $OLD
